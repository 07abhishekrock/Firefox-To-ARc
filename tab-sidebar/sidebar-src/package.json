{
		"name": "sidebar-src",
		"private": true,
		"version": "0.0.0",
		"type": "commonjs",
		"scripts": {
				"copy:assets": "cp -R public/ ./dist/assets/",
				"build": "sass src/index.scss dist/output.css && node esbuild.config.cjs",
				"dev": "concurrently \"pnpm start:firefox\" \"pnpm sass:dev\" \"pnpm js:dev\" ",
				"serve": "npx serve dist",
				"js:dev": "fdfind --type=file | entr -s 'node esbuild.config.cjs'",
				"sass:dev": "sass --watch src/index.scss dist/output.css",
				"buildWithoutTsc": "vite build",
				"start": "ls src/**/**/*.{tsx,ts} | entr -r pnpm buildWithoutTsc",
				"zip-extension": "cd ../ && rm -Rf tab-sidebar-zip && ./copy-script.sh && cd tab-sidebar-zip && zip extension.zip -r .",
				"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
				"preview": "vite preview",
				"cleanup": "rm -Rf dist/ && mkdir dist/ && mkdir dist/assets",
				"copy-assets": "cp -R public/* dist && cp src/index.html dist/index.html",
				"pre:dev": "pnpm cleanup && pnpm copy-assets",
				"start:firefox": "web-ext run --devtools --verbose --source-dir ../"
		},
		"dependencies": {
				"@rollup/plugin-commonjs": "^25.0.7",
				"classnames": "^2.3.2",
				"vanjs-core": "latest",
				"vanjs-ext": "latest"
		},
		"devDependencies": {
				"@groww-tech/eslint-config": "latest",
				"@groww-tech/eslint-plugin-internal": "latest",
				"@rollup/plugin-node-resolve": "^15.2.3",
				"@rollup/plugin-swc": "^0.3.0",
				"@types/firefox": "^0.0.31",
				"@types/firefox-webext-browser": "^111.0.1",
				"@types/react": "^18.2.15",
				"@types/react-dom": "^18.2.7",
				"@typescript-eslint/eslint-plugin": "^6.0.0",
				"@typescript-eslint/parser": "^6.0.0",
				"concurrently": "latest",
				"esbuild": "latest",
				"esbuild-plugin-solid": "^0.5.0",
				"eslint": "^8.45.0",
				"eslint-import-resolver-typescript": "^3.5.5",
				"eslint-plugin-import": "^2.22.1",
				"eslint-plugin-import-newlines": "latest",
				"eslint-plugin-react": "latest",
				"eslint-plugin-react-hooks": "^4.6.0",
				"eslint-plugin-react-refresh": "^0.4.3",
				"rollup": "^4.9.6",
				"rollup-plugin-copy": "^3.5.0",
				"rollup-plugin-esbuild": "^6.1.1",
				"rollup-plugin-scss": "^4.0.0",
				"rollup-preset-solid": "^2.0.1",
				"sass": "latest",
				"solid-js": "latest",
				"typescript": "^5.0.2",
				"web-ext": "^7.6.2"
		}
}
