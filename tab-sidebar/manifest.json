{
  "manifest_version": 2,
  "name": "tab-manager",
  "description": "Tab Manager - Arc to Firefox",
  "version": "1.2",
	"background": {
		"scripts": ["background-script.js"],
		"persistent": true 
	},
  "sidebar_action": {
    "default_icon": "icons/star.png",
    "default_title" : "Firefox To Arc",
    "default_panel": "./sidebar-src/dist/index.html"
  },
	"content_scripts": [
		{
			"matches": ["*://youtube.com/*", "*://www.youtube.com/*" ],
			"js": ["contentScripts/youtube_controller.js"]
		},
		{
			"matches": ["*://music.youtube.com/*", "*://www.music.youtube.com/*"],
			"js": ["contentScripts/music_youtube_controller.js"]
		},
		{
			"matches": ["*://meet.google.com/*", "*://www.meet.google.com/*"],
			"js": ["contentScripts/gmeet_controller.js"]
		}
	],
  "permissions": ["tabs", "history", "contextualIdentities", "storage", "cookies"],
  "commands": {
    "sidebar-action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
				"linux": "Ctrl+Shift+L"
      }
    },
		"close-tab" : {
			"suggested_key": {
				"default": "MacCtrl+Q"
			}
		},
		"toggle-last-tab": {
			"suggested_key": {
				"default": "MacCtrl+Shift+J",
				"linux": "Alt+Shift+J"
			}
		},
		"create-new-tab-container": {
			"suggested_key": {
				"default": "MacCtrl+Ctrl+N",
				"linux": "Alt+Shift+N"
			}
		},
		"switch-profile-right": {
			"suggested_key": {
				"default": "MacCtrl+Ctrl+L",
				"linux": "Alt+Shift+L"
			}
		},
		"switch-profile-left": {
			"suggested_key": {
				"default": "MacCtrl+Ctrl+H",
				"linux": "Alt+Shift+S"
			}
		},
		"open-media-tabs": {
			"suggested_key": {
				"default": "MacCtrl+Ctrl+M",
				"linux": "Alt+Shift+O"
			}
		}
  }

}
